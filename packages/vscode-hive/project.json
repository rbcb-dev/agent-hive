{
  "name": "vscode-hive",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "includedScripts": [
    "build",
    "format:check",
    "format:write"
  ],
  "sourceRoot": "packages/vscode-hive/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "dependsOn": [
        "vite:build",
        "build-storybook",
        "test-storybook"
      ]
    },
    "test": {
      "executor": "@nx/vitest:test",
      "outputs": [
        "{options.reportsDirectory}"
      ],
      "options": {
        "config": "packages/vscode-hive/vitest.webview.config.ts",
        "reportsDirectory": "../../coverage/packages/vscode-hive"
      }
    },
    "build-storybook": {
      "executor": "@nx/storybook:build",
      "outputs": ["{projectRoot}/storybook-static"],
      "options": {
        "configDir": "packages/vscode-hive/.storybook",
        "outputDir": "packages/vscode-hive/storybook-static"
      },
      "cache": true,
      "inputs": ["storybook", "^production"],
      "dependsOn": ["^build"]
    },
    "test-storybook": {
      "executor": "@nx/vitest:test",
      "options": {
        "configFile": "packages/vscode-hive/vitest.storybook.config.ts"
      },
      "cache": true,
      "inputs": ["storybook", "^production"],
      "outputs": ["{projectRoot}/__image_snapshots__"],
      "dependsOn": ["build-storybook"]
    }
  }
}
